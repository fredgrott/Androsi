<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:padding="25dip">

    <LinearLayout android:orientation="horizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:paddingRight="25dip">
        <TextView android:text="@string/p1" android:id="@+id/txtPlayer1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView android:text=" 2" android:id="@+id/txtPlayer1Counter"
            android:minWidth="30dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
        <TextView android:text="@string/p2" android:id="@+id/txtPlayer2"
            android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
        <TextView android:text=" 2" android:id="@+id/txtPlayer2Counter"
            android:minWidth="30dp" android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>
    <com.mobilebytes.androsi.GameBoard
        android:id="@+id/gameBoard" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="0"/>

</LinearLayout>